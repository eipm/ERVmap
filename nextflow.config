manifest {
    name = 'ERVmap'
    mainScript = 'main.nf'
}

docker {
    enabled = true
    temp = 'auto'
    runOptions = '--rm -u $(id -u):$(id -g)'
}

params {
    inputDir=''
    outPrefix='results/test.'
    cpus=1
    limitMemory=30000000
    debug='off'
}

process {
    withName: STARAlignment {
        container = 'eipm/ervmap:latest'
        containerOptions = '--memory 50G --memory-swap 100G -v /path/to/genome:/genome:ro'
    }

    withName: ERVcounting2 {
        container = 'eipm/ervmap:latest'
        containerOptions = ' -v $(pwd)/data:/data:ro -v /path/to/genome:/genome:ro' 
    }

}